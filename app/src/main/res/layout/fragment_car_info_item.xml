<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.CarInfoFragment"
    android:transitionName="@string/main_to_info_transition"
    android:background="@drawable/surface_pad"
    android:layout_margin="5dp"
    android:elevation="1dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/card_header"
            android:text="@string/card_title_placeholder"
            android:textSize="18sp"
            android:padding="10dp"

            android:id="@+id/car_info_title"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/card_description"
            android:text="@string/card_description_placeholder"
            android:textSize="14sp"
            android:padding="10dp"

            android:id="@+id/car_info_description"
            android:layout_below="@id/car_info_title"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>